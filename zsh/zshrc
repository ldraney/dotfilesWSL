# Yank to the system clipboard
# may need to change for Windows
function vi-yank-xclip {
    zle vi-yank
   #echo "$CUTBUFFER" | xclip -i
   #echo "$CUTBUFFER" | 'clip.exe'
   #echo "$CUTBUFFER" | win32yank.exe -i
   echo "$CUTBUFFER" | powershell.exe -Command "Set-Clipboard -Value \$input"
}
zle -N vi-yank-xclip
bindkey -M vicmd 'y' vi-yank-xclip

