function wd-new-branch() {
  branch_name=$1
  #branch_number=$(echo "$branch_name" | awk -F'-' '{print $1}')
  directory=$2

  if [[ $branch_name == *-* ]]; then
	wd_short_name=${branch_name:0:4}
  else
	wd_short_name=${branch_name:0:4}${branch_name:4:2}
  fi

  cd ~/$directory/$branch_name
  wd add --force $wd_short_name
  wd $wd_short_name
}

