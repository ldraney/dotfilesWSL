  git status
  cd $curdir
}

dotAll() {
  curdir=$(pwd)

  echo -e "\e[1m\e[35mThe Dotfiles Directory\e[0m"
  wd dot
  gq "$1"

  echo -e "\e[1m\e[35mThe Ansible Desktop Setup Directory\e[0m"
  wd ansible_desktop_setup_WSL
  gq "$1"

  echo -e "\e[1m\e[35mThe Sensitive Directory\e[0m"
  wd sensitive
  gq "$1"
  cd $curdir
}

